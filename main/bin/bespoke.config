[{kernel,
  [{logger_level, error},
   {logger,
    [{handler, default, logger_std_h,
      #{formatter => {logger_formatter,
                      #{single_line => false}}}},
     {handler, file, logger_disk_log_h,
      #{config => #{file => "/tmp/bespoke.log",
                    max_no_bytes => 10485760,
                    max_no_files => 5},
        formatter => {logger_formatter,
                      #{single_line => false}}}},
     {module_level, error, all},
     {module_level, debug, [db_serv]}
    ]}
  ]}
].


